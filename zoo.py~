'''ZINGARU WILDLIFE,GAME AND RECREATIONAL  CENTER blueprint for our zoo'''
class ZOO:
    def __init__(self,Zoo_name,Location):
        self.name=Zoo_name
        self.Location=Location

    def search(self):
          print 'name:' + self.name
          print 'Location:' + self.Location
          
class Living Beings(ZOO):
    def __init__(self,name,Zoo_name,Location,age,gender):
        ZOO.__init__(self,Zoo_name,"West stack")
        self.age=age
        self.gender=gender
    def search(self):
            ZOO.search(self)
            print 'age:' + str(self.age)
            print 'gender:' + self.gender

class  EMPLOYEES(ZOO):
    def __init__(self,Zoo_name,Location,ID,Dept.,Postion,Salary):
        ZOO.__init__(self,Zoo_name,"East stack ")
        self.ID=ID
        self.Dept.=Dept.
        self.Postion=Position
        self.Salary=Salary
    def add_Employee(self):
        ZOO.search(self)
        print 'ID:' + self.ID
        print 'Dept.:' + self.Dept.
        print 'Position:' + self.Position
        print 'Salary:' + self.Salary

class VISITORS(ZOO):
    def __init__(self,ticket number,animal picture):
        ZOO.__init__(self,Zoo_name,"Visitor")
        self.ticket_number=ticket number
        self.animal_picture=animmal picture
    def guest(self):
        print 'ticket number:' + self.ticket_number
        print 'animal picture:' + self.animal_picture

