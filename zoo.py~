class Population(ZOO):
    def __init__(self,Zoo_name,visitors population,animals population):
        ZOO.__init__(self,Zoo_name,"population")
        self.population_Visitor=Visitors population
        self.population_animals=animals population
    def population_database:
        ZOO.population_database(self):
            print 'Visitors population:' + self.Visitors_population
            print 'animals population:' + self.animals_population            
      
class Animals classification(ZOO):
    def __init__(self,Zoo_name,Amphibians,Mammals,Birds,Fish,Reptiles):
        ZOO.__init__(self,Zoo_name,"East-North ZOO BLUEPRINT ")
        self.Amphibians=Amphibians
        self.Mammals=Mammals
        self.Birds=Birds
        self.Fish=Fish
        self.Reptiles=Reptiles
    def animals_classification:
        ZOO.animals_classification(self):
            print 'Amphibians:' + self.Animals
            print 'Mammals:' + self.Mammals
            print 'Birds' + self.Birds
            print 'Fish' + self.Fish
            print 'Reptiles' + self.Reptiles

